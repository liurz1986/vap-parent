<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vrv.vap.admin.mapper.NacosMapper">

    <!--扫描备注：已在代码业务层执行了参数sql注入校验-->
    <insert id="insertInfo">
        insert into ${tableName}
        <foreach collection="content.keys" item="k" index="index" open="(" separator="," close=")">
            ${k}
        </foreach>
        values
        <foreach collection="content.keys" item="k" index="index" open="(" separator="," close=")">
            #{content[${k}]}
        </foreach>
    </insert>

    <!--扫描备注：已在代码业务层执行了参数sql注入校验-->
    <select id="getInfo" resultType="map" parameterType="java.lang.String">
        select * from  ${tableName}
    </select>

    <select id="getColumns" resultType="java.lang.String" parameterType="java.lang.String">
        select column_name from information_schema.columns
        where table_name=#{tableName}
        and table_schema=#{tableSchema}
    </select>

    <!--扫描备注：已在代码业务层执行了参数sql注入校验-->
    <update id="clearRows" parameterType="java.lang.String">
        SET FOREIGN_KEY_CHECKS = 0;
        truncate table ${tableName};
        SET FOREIGN_KEY_CHECKS = 1;
    </update>
</mapper>